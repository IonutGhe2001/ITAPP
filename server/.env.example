# PostgreSQL connection string: postgresql://<user>:<password>@<host>:<port>/<database>
DATABASE_URL=postgresql://<USERNAME>:<PASSWORD>@<HOST>:<PORT>/<DB_NAME>

# JWT configuration
JWT_SECRET=<YOUR_JWT_SECRET>
JWT_EXPIRES_IN=1d

# Backend server port
PORT=8080

# Process verbal generation: 'auto' or 'manual'
PV_GENERATION_MODE=auto

# Authentication bypass for automated staging tests
AUTH_DISABLED=false
TEST_LOGIN_SECRET=

# Frontend base URL for redirects (set to https://app-staging.<domeniu>.com în staging)
FRONTEND_ROOT=http://localhost:3000

# Explicit CORS origin list (staging: https://app-staging.<domeniu>.com)
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# Parola opțională pentru scriptul de seed al testerului de staging
STAGING_TESTER_PASSWORD=