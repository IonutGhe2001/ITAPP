# PostgreSQL connection string: postgresql://<user>:<password>@<host>:<port>/<database>
DATABASE_URL=postgresql://<USERNAME>:<PASSWORD>@<HOST>:<PORT>/<DB_NAME>

# JWT configuration
JWT_SECRET=<YOUR_JWT_SECRET>
JWT_EXPIRES_IN=1d

# Backend server port
PORT=8080

# Process verbal generation: 'auto' or 'manual'
PV_GENERATION_MODE=auto

# Node environment & authentication bypass for staging/testing
NODE_ENV=development
AUTH_DISABLED=false
TEST_LOGIN_SECRET=

# Frontend base URL for redirects (development uses the Vite dev server)
FRONTEND_ROOT=http://localhost:5173

# Explicit CORS origin list (comma-separated)
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# Optional password override for the staging tester seed script
STAGING_TESTER_PASSWORD=