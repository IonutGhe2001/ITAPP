{
  "compilerOptions": {
    "outDir": "dist",
    "module": "CommonJS",
    "target": "ES2020",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "baseUrl": "./src",
    "paths": {
      "@lib/*": ["lib/*"],
      "@services/*": ["services/*"],
      "@middlewares/*": ["middlewares/*"],
      "@validators/*": ["validators/*"],
      "@shared/*": ["../../shared/*"]
    }
  },
  "include": ["src", "prisma"]
}
